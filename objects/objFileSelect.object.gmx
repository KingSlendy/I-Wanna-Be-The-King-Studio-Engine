            <string>var length = array_length_1d(global.difficultyNames);

if (menu == 0) {
    if (scrButtonPressed(global.menuUpButton)) {
        select[menu]--;
        audio_play_sound(sndDoubleJump, 0, false);
    }
        
    if (scrButtonPressed(global.menuDownButton)) {
        select[menu]++;
        audio_play_sound(sndDoubleJump, 0, false);
    }

    select[menu] += global.totalSaves;
    select[menu] %= global.totalSaves;
    
    if (scrButtonPressed(global.menuAcceptButton)) {
        if (global.menuMode == 0) {
            select[1] = cond_exp(file_exists(scrSaveName(select[menu])), length - 1, 0);
            menu = 1;
            audio_play_sound(sndJump, 0, false);
        } else {
            global.savenum = select[menu];
            room_goto(rDiffs);
        }
    }
    
    if (scrButtonPressed(global.menuBackButton)) {
        room_goto(rTitle);
    }
} else if (menu == 1) {
    if (scrButtonPressed(global.menuLeftButton)) {
        select[menu]--;
        audio_play_sound(sndDoubleJump, 0, false);
    }
    
    if (scrButtonPressed(global.menuRightButton)) {
        select[menu]++;
        audio_play_sound(sndDoubleJump, 0, false);
    }
        
    if (!file_exists(scrSaveName(select[0]))) {
        length--;
    }
        
    select[menu] += length;
    select[menu] %= length;
    
    if (scrButtonPressed(global.menuAcceptButton)) {
        global.saveNum = select[0];
        scrStartGame(select[menu]);
    }
    
    if (scrButtonPressed(global.menuBackButton)) {
        menu = 0;
    }
}

if (scrButtonPressed(global.menuOptionsButton)) {
    room_goto(rOptions);
}
